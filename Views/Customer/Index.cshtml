@model Vidly.ViewModels.AllCustomersViewModel


<h1>List of Customers</h1>

@Html.ActionLink( "Create","New","Customer",new {},new{ @class = "btn btn-primary p-2 m-2" } )

@if (Model.Customers.Count <= 0)
{
    <h4>There aren't any customerDtoDtos yet.</h4>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
    

        <tbody>

    
        @foreach (Customer customer in Model.Customers)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                        customer.Name, 
                        "Details", 
                        "Customer", 
                        new { id = customer.Id }, 
                        null)
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    @customer.MembershipType.DiscountRate%
                </td>
                    
            </tr>
        }
        </tbody>

    </table>
}